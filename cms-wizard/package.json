{
  "name": "cms-wizard-tests",
  "version": "1.0.0",
  "description": "E2E tests for CMS Template Site Configuration Wizard",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report test-results/html",
    "test:performance": "playwright test animation-performance.spec.js --reporter=list,json",
    "test:install": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}